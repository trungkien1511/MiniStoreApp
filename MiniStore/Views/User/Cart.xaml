<UserControl x:Class="MiniStore.Views.User.Cart"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MiniStore.Views.User"
        mc:Ignorable="d"
        Width="1200" Height="600">
    <Grid>
        <Grid Background="White">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="3*"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>
            <StackPanel Grid.Column="1"   HorizontalAlignment="Center" Width="300">
                <StackPanel Orientation="Horizontal" Margin="10,0,5,0">

                    <Label Content="Tạm tính giỏ hàng:" Margin="0 0 50 0"/>
                    <Label Content="Tạm tính giỏ hàng:"/>
                </StackPanel>

            </StackPanel>
        </Grid>
    </Grid>
</UserControl>
