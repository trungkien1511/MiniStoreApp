<Window x:Class="MiniStore.Views.LoginView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Đăng nhập" Height="450" Width="400"
        WindowStartupLocation="CenterScreen"
        Background="#F5F5F5">

    <Grid>
        <!-- Header -->
        <Border Background="White" Height="60" VerticalAlignment="Top">
            <TextBlock Text="WinMart" FontSize="24" FontWeight="Bold" Foreground="#E53E3E"
                       VerticalAlignment="Center" HorizontalAlignment="Center"/>
        </Border>

        <!-- Login Form -->
        <Border Background="White" CornerRadius="10" Padding="30" Margin="30,80,30,30">
            <StackPanel VerticalAlignment="Top">

                <!-- Title -->
                <TextBlock Text="Đăng nhập" FontSize="22" FontWeight="Bold" Foreground="#333333"
                           HorizontalAlignment="Center" Margin="0,0,0,20"/>

                <!-- Phone/Username -->
                <StackPanel Margin="0,0,0,15">
                    <TextBlock Text="Số điện thoại / Username" FontSize="14" Foreground="#666666"/>
                    <TextBox x:Name="txtUsername" Height="30"
                         FontSize="16"
                         Background="#FFFFFF"
                         BorderBrush="#E0E0E0"
                         BorderThickness="1"
                         Padding="5"/>
                </StackPanel>

                <!-- Password -->
                <StackPanel Margin="0,0,0,15">
                    <TextBlock Text="Mật khẩu" FontSize="14" Foreground="#666666"/>
                    <PasswordBox x:Name="txtPassword" Height="30"
                         FontSize="16"
                         Background="#FFFFFF"
                         BorderBrush="#E0E0E0"
                         BorderThickness="1"
                         Padding="5"/>
                </StackPanel>

                <!-- Login Button -->
                <Button Content="Đăng Nhập"
                    Height="40"
                    Width="200"
                    Background="Red"
                    Foreground="White"
                    FontSize="16"
                    FontWeight="Bold"
                    Click="Login_Click"/>

            </StackPanel>
        </Border>
    </Grid>
</Window>
