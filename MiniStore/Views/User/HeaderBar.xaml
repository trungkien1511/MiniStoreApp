<UserControl x:Class="MiniStore.Views.User.HeaderBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Height="Auto" Width="Auto">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="80"/>
            <!-- top bar -->
            <RowDefinition Height="Auto"/>
            <!-- thanh danh mục -->
            <RowDefinition Height="1"/>
            <!-- line -->
        </Grid.RowDefinitions>

        <!-- Top bar -->
        <Grid Background="Red" VerticalAlignment="Top">
            <Grid Height="80"  Grid.Row="0" Margin="200 0 200 0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <Label Content="WinMart"
                        VerticalAlignment="Center"
                        FontWeight="ExtraBold"
                        Foreground="White"
                        FontSize="36"
                        Grid.Column="0"/>

                <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right">
                    <!-- Search Box -->
                    <TextBox Width="300" Height="34"
                    VerticalContentAlignment="Center"
                    Foreground="Black"
                    FontSize="14"
                    Padding="15,0,30,0"
                    Text=""
                    Margin="0,0,20,0">
                        <TextBox.Template>
                            <ControlTemplate TargetType="{x:Type TextBox}">
                                <Grid>
                                    <Border CornerRadius="15"
                                BorderBrush="Gray"
                                BorderThickness="1"
                                Background="White"/>
                                    <ScrollViewer x:Name="PART_ContentHost"
                                        Margin="10,0,30,0"
                                        VerticalAlignment="Center"/>
                                    <TextBlock FontFamily="Segoe MDL2 Assets"
                                    Text="&#xE721;"
                                    FontSize="16"
                                    Foreground="Gray"
                                    VerticalAlignment="Center"
                                    HorizontalAlignment="Right"
                                    Margin="0,0,10,0"/>
                                </Grid>
                            </ControlTemplate>
                        </TextBox.Template>
                    </TextBox>

                    <!-- Giỏ hàng -->
                    <Button Background="Transparent" BorderBrush="Transparent" Padding="5" Cursor="Hand" Margin="0,0,20,0" VerticalAlignment="Center">
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                            <TextBlock Text="&#xE7BF;" FontFamily="Segoe MDL2 Assets"
                            FontSize="20" Foreground="White" Margin="0,0,5,0" FontWeight="DemiBold"/>
                            <TextBlock Text="Giỏ hàng" FontSize="16" Foreground="White" FontWeight="DemiBold"/>
                        </StackPanel>
                    </Button>

                    <!-- User menu -->
                    <Menu Background="Transparent" VerticalAlignment="Center" BorderThickness="0">
                        <MenuItem Header="&#xE77B;  Tài khoản"
                        FontFamily="Segoe MDL2 Assets"
                        FontSize="16"
                        Foreground="White">
                            <MenuItem Header="Thông tin cá nhân"/>
                            <MenuItem Header="Đổi mật khẩu"/>
                            <MenuItem Header="Đăng xuất"/>
                        </MenuItem>
                    </Menu>
                </StackPanel>
            </Grid>
        </Grid>

        <!-- Thanh danh mục -->
        <Grid Background="#f1f1f1" Grid.Row="1" >
            <Grid Margin="200,0,200,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Nút danh mục -->
                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                    <Button Background="Transparent" BorderBrush="Transparent" Padding="5">
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                            <TextBlock Text="&#xE8FD;" FontFamily="Segoe MDL2 Assets"
                               FontSize="18" Foreground="Black"
                               Margin="0,0,10,0" FontWeight="DemiBold"/>
                            <TextBlock Text="Danh mục sản phẩm"
                               FontSize="14" Foreground="Black" FontWeight="DemiBold"/>
                        </StackPanel>
                    </Button>
                </StackPanel>

                <!-- Tin tức -->
                <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center">
                    <Button Background="Transparent" BorderBrush="Transparent" Padding="5">
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                            <TextBlock Text="&#xE715;" FontFamily="Segoe MDL2 Assets"
                               FontSize="18" Foreground="Black"
                               Margin="0,0,10,0" FontWeight="Bold"/>
                            <TextBlock Text="Tin tức" FontSize="14" Foreground="Black" FontWeight="DemiBold"/>
                        </StackPanel>
                    </Button>
                </StackPanel>

            </Grid>
        </Grid>

        <Border Height="2" Background="Black" Grid.Row="2">
            <Border.Effect>
                <DropShadowEffect Color="Black" BlurRadius="2" ShadowDepth="1" Opacity="0.3"/>
            </Border.Effect>
        </Border>

    </Grid>
</UserControl>
