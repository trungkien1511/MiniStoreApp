<Page x:Class="MiniStore.Views.User.ProductDetail"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      mc:Ignorable="d"
      Title="Chi tiết sản phẩm">
    <Grid Margin="20" HorizontalAlignment="Center">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="500"/>
            <!-- Cột ảnh -->
            <ColumnDefinition Width="*"/>
            <!-- Cột thông tin -->
        </Grid.ColumnDefinitions>

        <!-- ===== CỘT 1: ẢNH SẢN PHẨM ===== -->
        <StackPanel Grid.Column="0" Margin="10" >
            <!-- Ảnh chính -->
            <Border BorderBrush="LightGray" BorderThickness="1" CornerRadius="5">
                <Image Source="/Image/milo.jpg" Stretch="Uniform" Height="300"  x:Name="ProductImage"/>
            </Border>

            <!-- Ảnh nhỏ (thumbnails) -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0">
                <Border BorderBrush="Red" BorderThickness="2" CornerRadius="5" Margin="5">
                    <Image Source="/Image/milo.jpg" Width="60" Height="60" Stretch="Uniform"/>
                </Border>
                <Border BorderBrush="Gray" BorderThickness="1" CornerRadius="5" Margin="5">
                    <Image Source="/Image/milo2.jpg" Width="60" Height="60" Stretch="Uniform"/>
                </Border>
                <Border BorderBrush="Gray" BorderThickness="1" CornerRadius="5" Margin="5">
                    <Image Source="/Image/milo3.jpg" Width="60" Height="60" Stretch="Uniform"/>
                </Border>
            </StackPanel>
        </StackPanel>


        <!-- ===== CỘT 2: THÔNG TIN ===== -->
        <StackPanel Grid.Column="1" Margin="20,10" >
            <!-- Tên sản phẩm -->
            <TextBlock Text="Sữa uống Milo ít đường Nestle lốc 4 hộp x 180ml"
                       FontSize="20" FontWeight="Bold" TextWrapping="Wrap"
                       Margin="0,0,0,10"
                       x:Name="ProductName"/>

            <!-- Giá -->
            <TextBlock x:Name="ProductPrice" FontSize="16" Foreground="Red" FontWeight="Bold"/>

            <!-- Tình trạng -->
            <TextBlock x:Name="ProductStatus" FontSize="15" Foreground="Green" Margin="0,0,0,20"/>

            <!-- Vận chuyển -->
            <StackPanel Margin="0,0,0,20">
                <TextBlock Text="Miễn phí giao hàng cho đơn từ 300.000đ." FontSize="14"/>
                <TextBlock Text="Giao hàng trong 2 giờ." FontSize="14"/>
            </StackPanel>

            <!-- Chọn số lượng -->
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,0,20">
                <Button x:Name="BtnMinus" Content="-" Width="30" Height="30" Click="BtnMinus_Click"/>
                <TextBlock x:Name="TxtQuantity" Text="1" Width="30" TextAlignment="Center" VerticalAlignment="Center" FontSize="16"/>
                <Button x:Name="BtnPlus" Content="+" Width="30" Height="30" Click="BtnPlus_Click"/>
            </StackPanel>

            <Button Content="🛒  THÊM VÀO GIỎ" Style="{StaticResource RedButton}" Height="45" Width="200"
                    FontSize="16" FontWeight="Bold" HorizontalAlignment="Left" Margin="10 0"/>

            <!-- Nút thêm giỏ -->
        </StackPanel>
    </Grid>
</Page>
