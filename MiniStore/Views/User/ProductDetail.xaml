<Page x:Class="MiniStore.Views.User.ProductDetail"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      mc:Ignorable="d"
      Title="Chi tiết sản phẩm"
      Width="1200" Height="600">
    <Grid Margin="20">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <!-- Cột ảnh -->
            <ColumnDefinition Width="3*"/>
            <!-- Cột thông tin -->
        </Grid.ColumnDefinitions>

        <!-- ===== CỘT 1: ẢNH SẢN PHẨM ===== -->
        <StackPanel Grid.Column="0" Margin="10">
            <!-- Ảnh chính -->
            <Border BorderBrush="LightGray" BorderThickness="1" CornerRadius="5">
                <Image Source="/Image/milo.jpg" Stretch="Uniform" Height="300"/>
            </Border>

            <!-- Ảnh nhỏ (thumbnails) -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0">
                <Border BorderBrush="Red" BorderThickness="2" CornerRadius="5" Margin="5">
                    <Image Source="/Image/milo.jpg" Width="60" Height="60" Stretch="Uniform"/>
                </Border>
                <Border BorderBrush="Gray" BorderThickness="1" CornerRadius="5" Margin="5">
                    <Image Source="/Image/milo2.jpg" Width="60" Height="60" Stretch="Uniform"/>
                </Border>
                <Border BorderBrush="Gray" BorderThickness="1" CornerRadius="5" Margin="5">
                    <Image Source="/Image/milo3.jpg" Width="60" Height="60" Stretch="Uniform"/>
                </Border>
            </StackPanel>
        </StackPanel>


        <!-- ===== CỘT 2: THÔNG TIN ===== -->
        <StackPanel Grid.Column="1" Margin="20,10">
            <!-- Tên sản phẩm -->
            <TextBlock Text="Sữa uống Milo ít đường Nestle lốc 4 hộp x 180ml"
                       FontSize="20" FontWeight="Bold" TextWrapping="Wrap"
                       Margin="0,0,0,10"/>

            <!-- SKU -->
            <TextBlock Text="SKU: 1062317" Foreground="Gray" FontSize="14" Margin="0,0,0,15"/>

            <!-- Giá -->
            <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                <TextBlock Text="Giá niêm yết: " FontSize="16"/>
                <TextBlock Text="32.600 đ" FontSize="16" TextDecorations="Strikethrough" Foreground="Gray"/>
            </StackPanel>

            <!-- Tình trạng -->
            <TextBlock Text="Còn hàng" FontSize="15" Foreground="Green" Margin="0,0,0,20"/>

            <!-- Vận chuyển -->
            <StackPanel Margin="0,0,0,20">
                <TextBlock Text="Miễn phí giao hàng cho đơn từ 300.000đ." FontSize="14"/>
                <TextBlock Text="Giao hàng trong 2 giờ." FontSize="14"/>
            </StackPanel>

            <!-- Chọn số lượng -->
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,0,20">
                <Button Content="-" Width="30" Height="30"/>
                <TextBlock Text="1" Width="30" TextAlignment="Center" VerticalAlignment="Center" FontSize="16"/>
                <Button Content="+" Width="30" Height="30"/>
            </StackPanel>

            <!-- Nút thêm giỏ -->
            <Button Content="🛒  THÊM VÀO GIỎ" Style="{StaticResource RedButton}" Height="45" Width="200"
                    FontSize="16" FontWeight="Bold"/>
        </StackPanel>
    </Grid>
</Page>
