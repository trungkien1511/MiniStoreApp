<Page x:Class="MiniStore.Views.User.Home"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        >
    <Page.Resources>
        <Style x:Key="RoundedButton" TargetType="Button">
            <!-- Màu chữ và nền mặc định -->
            <Setter Property="Foreground" Value="Red"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="FontWeight" Value="SemiBold"/>

            <!-- Viền đỏ, mảnh hơn -->
            <Setter Property="BorderBrush" Value="Red"/>
            <Setter Property="BorderThickness" Value="1"/>

            <!-- Kích thước và chuột -->
            <Setter Property="Width" Value="120"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Padding" Value="6,3"/>

            <!-- Template bo tròn -->
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                        BorderBrush="{TemplateBinding BorderBrush}"
                        BorderThickness="{TemplateBinding BorderThickness}"
                        CornerRadius="5"
                        Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center"
                                      VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <DataTemplate x:Key="ProductCardTemplate">
            <Button Tag="{Binding}" 
                Click="ProductCard_Click"
                BorderThickness="0"
                Background="Transparent"
                Padding="0"
                Cursor="Hand">
                <Border Width="250" Margin="10" CornerRadius="8" Background="White" Padding="8" Height="400">
                    <Border.Effect>
                        <DropShadowEffect Color="Black" BlurRadius="10" ShadowDepth="3" Opacity="0.3"/>
                    </Border.Effect>
                    <StackPanel>
                        <!-- Ảnh -->
                        <Border Height="200" Background="#F9F9F9" CornerRadius="8" Margin="0,0,0, 30">
                            <Image Source="{Binding ImagePath}" Stretch="Uniform"/>
                        </Border>

                        <!-- Tên -->
                        <TextBlock Text="{Binding Name}" FontWeight="Bold" FontSize="16"
                           HorizontalAlignment="Center" Margin="0,0,0,16" TextTrimming="CharacterEllipsis" TextWrapping="NoWrap"/>

                        <!-- Giá -->
                        <TextBlock Text="{Binding Price, StringFormat={}{0:N0} đ}" 
                           Foreground="Red" FontWeight="SemiBold" FontSize="14"
                           HorizontalAlignment="Center" Margin="0,0,0,50"/>

                        <!-- Nút -->
                        <Button Style="{StaticResource RoundedButton}" Padding="5 6" >
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                <TextBlock Text="&#xE7BF;" FontFamily="Segoe MDL2 Assets"
                                   FontSize="16" Margin="0,0,5,0"/>
                                <TextBlock Text="Thêm vào giỏ" FontSize="14" FontWeight="SemiBold"/>
                            </StackPanel>
                        </Button>
                    </StackPanel>
                </Border>
            </Button>
        </DataTemplate>
    </Page.Resources>

    <ItemsControl x:Name="ProductItemsControl"
                      ItemTemplate="{StaticResource ProductCardTemplate}"
                  HorizontalAlignment="Center">
        <ItemsControl.ItemsPanel>
            <ItemsPanelTemplate>
                <WrapPanel />
            </ItemsPanelTemplate>
        </ItemsControl.ItemsPanel>
    </ItemsControl>
</Page>
