<Window x:Class="MiniStore.Views.User.Test"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="TestWindow" Height="900" Width="1200">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Header + Top bar + Thanh danh mục -->
            <RowDefinition Height="*"/>
            <!-- Content -->
        </Grid.RowDefinitions>

        <!-- Header + Thanh danh mục -->
        <StackPanel Grid.Row="0" Orientation="Vertical">
            <!-- Top Bar -->
            <Grid Background="Red" Height="80">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center">
                    <Label Content="WinMart" VerticalAlignment="Center" FontWeight="ExtraBold"
                           Foreground="White" FontSize="36" Margin="0,0,20,0"/>

                    <TextBox Width="220" Height="34" VerticalContentAlignment="Center" FontSize="14"
                             Padding="15,0,30,0" Text="Tìm kiếm..." Margin="0,0,20,0">
                        <TextBox.Template>
                            <ControlTemplate TargetType="{x:Type TextBox}">
                                <Grid>
                                    <Border CornerRadius="15" BorderBrush="Gray" BorderThickness="1" Background="White"/>
                                    <ScrollViewer x:Name="PART_ContentHost" Margin="10,0,30,0" VerticalAlignment="Center"/>
                                    <TextBlock FontFamily="Segoe MDL2 Assets" Text="&#xE721;" FontSize="16" Foreground="Gray"
                                               VerticalAlignment="Center" HorizontalAlignment="Right" Margin="0,0,10,0"/>
                                </Grid>
                            </ControlTemplate>
                        </TextBox.Template>
                    </TextBox>

                    <Button Background="Transparent" BorderBrush="Transparent" Padding="5" Cursor="Hand" Margin="0,0,20,0">
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                            <TextBlock Text="&#xE7BF;" FontFamily="Segoe MDL2 Assets" FontSize="20"
                                       Foreground="White" Margin="0,0,5,0" FontWeight="DemiBold"/>
                            <TextBlock Text="Giỏ hàng" FontSize="16" Foreground="White" FontWeight="DemiBold"/>
                        </StackPanel>
                    </Button>

                    <Menu Background="Transparent" VerticalAlignment="Center" BorderThickness="0">
                        <MenuItem Header="&#xE77B;  Tài khoản" FontFamily="Segoe MDL2 Assets" FontSize="16" Foreground="White">
                            <MenuItem Header="Thông tin cá nhân"/>
                            <MenuItem Header="Đổi mật khẩu"/>
                            <MenuItem Header="Đăng xuất"/>
                        </MenuItem>
                    </Menu>
                </StackPanel>
            </Grid>

            <!-- Thanh danh mục -->
            <Grid Background="LightGray" Height="40">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Button Background="Transparent" BorderBrush="Transparent" Padding="5" Cursor="Hand" Grid.Column="0" Margin="10,0,0,0">
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                        <TextBlock Text="&#xE8FD;" FontFamily="Segoe MDL2 Assets" FontSize="18" Foreground="Black" Margin="0,0,10,0"/>
                        <TextBlock Text="Danh mục sản phẩm" FontSize="14" FontWeight="DemiBold"/>
                    </StackPanel>
                </Button>

                <StackPanel Grid.Column="1" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,0,10,0">
                    <Button Background="Transparent" BorderBrush="Transparent" Padding="5" Cursor="Hand">
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                            <TextBlock Text="&#xE715;" FontFamily="Segoe MDL2 Assets" FontSize="18" Foreground="Black" Margin="0,0,10,0"/>
                            <TextBlock Text="Tin tức" FontSize="14" FontWeight="DemiBold"/>
                        </StackPanel>
                    </Button>
                </StackPanel>
            </Grid>
        </StackPanel>

        <!-- Content -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
            <ItemsControl>
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel Orientation="Horizontal"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>

                <!-- Ví dụ card sản phẩm, copy nhiều lần để test scroll -->
                <Border Width="150" Margin="10" CornerRadius="8" Background="White" Padding="8">
                    <Border.Effect>
                        <DropShadowEffect Color="Black" BlurRadius="10" ShadowDepth="3" Opacity="0.3"/>
                    </Border.Effect>
                    <StackPanel>
                        <Border Height="100" Background="#F9F9F9" CornerRadius="8" Margin="0,0,0,10">
                            <Image Source="Images/sp1.png" Stretch="Uniform"/>
                        </Border>
                        <TextBlock Text="Sản phẩm A" FontWeight="Bold" FontSize="14"
                                   HorizontalAlignment="Center" Margin="0,0,0,8"/>
                        <TextBlock Text="100.000đ" Foreground="Red" FontWeight="SemiBold" FontSize="13"
                                   HorizontalAlignment="Center" Margin="0,0,0,8"/>
                        <Button Background="White" BorderBrush="Red" BorderThickness="1" Width="120" Padding="6,3" Cursor="Hand">
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                <TextBlock Text="&#xE7BF;" FontFamily="Segoe MDL2 Assets" FontSize="16" Margin="0,0,5,0"/>
                                <TextBlock Text="Thêm vào giỏ" FontSize="14" FontWeight="SemiBold"/>
                            </StackPanel>
                        </Button>
                    </StackPanel>
                </Border>

                <!-- Copy card nhiều lần -->
                <Border Width="150" Margin="10" CornerRadius="8" Background="White" Padding="8">
                    <Border.Effect>
                        <DropShadowEffect Color="Black" BlurRadius="10" ShadowDepth="3" Opacity="0.3"/>
                    </Border.Effect>
                    <StackPanel>
                        <Border Height="100" Background="#F9F9F9" CornerRadius="8" Margin="0,0,0,10">
                            <Image Source="Images/sp2.png" Stretch="Uniform"/>
                        </Border>
                        <TextBlock Text="Sản phẩm B" FontWeight="Bold" FontSize="14"
                                   HorizontalAlignment="Center" Margin="0,0,0,8"/>
                        <TextBlock Text="200.000đ" Foreground="Red" FontWeight="SemiBold" FontSize="13"
                                   HorizontalAlignment="Center" Margin="0,0,0,8"/>
                        <Button Background="White" BorderBrush="Red" BorderThickness="1" Width="120" Padding="6,3" Cursor="Hand">
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                <TextBlock Text="&#xE7BF;" FontFamily="Segoe MDL2 Assets" FontSize="16" Margin="0,0,5,0"/>
                                <TextBlock Text="Thêm vào giỏ" FontSize="14" FontWeight="SemiBold"/>
                            </StackPanel>
                        </Button>
                    </StackPanel>
                </Border>

            </ItemsControl>
        </ScrollViewer>
    </Grid>
</Window>
