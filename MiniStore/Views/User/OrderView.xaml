<Page x:Class="MiniStore.Views.User.OrderView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      mc:Ignorable="d"
      Title="Đặt hàng"
      
     >

   
        <StackPanel HorizontalAlignment="Stretch" >

            <!-- Thông tin người nhận -->
        <Border Padding="20" Background="#FFF9F9F9" CornerRadius="10" Margin="0,0,0,20"  HorizontalAlignment="Stretch" >
                <StackPanel>
                    <TextBlock Text="Thông tin đặt hàng" FontSize="22" FontWeight="Bold" Margin="0,0,0,15"/>

                    <TextBlock Text="Họ tên người nhận*" FontWeight="SemiBold"/>
                    <TextBox x:Name="txtFullName" Margin="0,5,0,15" Height="35"/>

                    <TextBlock Text="Số điện thoại*" FontWeight="SemiBold"/>
                    <TextBox x:Name="txtPhone"  Margin="0,5,0,15" Height="35"/>

                    <TextBlock Text="Địa chỉ*" FontWeight="SemiBold"/>
                    <TextBox x:Name="txtAddress" Margin="0,5,0,15" Height="35"/>

                    <TextBlock Text="Thông tin bắt buộc có dấu *" FontStyle="Italic" Foreground="Red" Margin="0,10,0,0"/>
                </StackPanel>
            </Border>

            <!-- Phương thức thanh toán + Ghi chú -->
            <Border Padding="20" Background="#FFF9F9F9" CornerRadius="10" Margin="0,0,0,20" HorizontalAlignment="Stretch">
                <StackPanel>
                    <TextBlock Text="Phương thức thanh toán" FontSize="20" FontWeight="Bold" Margin="0,0,0,15"/>

                    <RadioButton x:Name="rbCOD" Content="Tiền mặt (COD)" GroupName="PaymentMethod" IsChecked="True" Margin="0,5"/>

                    <TextBlock Text="Ghi chú (Nếu có)" FontWeight="SemiBold" Margin="0,15,0,5"/>
                    <TextBox x:Name="txtNote" Height="80" TextWrapping="Wrap" AcceptsReturn="True" VerticalScrollBarVisibility="Auto"/>
                </StackPanel>
            </Border>

            <!-- Tóm tắt đơn hàng + Xác nhận -->
            <Border Padding="20" Background="#FFF9F9F9" CornerRadius="10" Margin="0,0,0,20" Width="300" HorizontalAlignment="Right">
                <StackPanel>
                    <TextBlock Text="Tóm tắt đơn hàng" FontSize="20" FontWeight="Bold" Margin="0,0,0,15"/>

                    <StackPanel Orientation="Horizontal" Margin="0,5">
                        <TextBlock Text="Tổng tiền hàng:" FontWeight="SemiBold" Width="180"/>
                        <TextBlock x:Name="txtSubtotal" HorizontalAlignment="Right"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" Margin="0,5">
                        <TextBlock Text="Phí vận chuyển:" FontWeight="SemiBold" Width="180"/>
                        <TextBlock x:Name="txtShippingFee" Text="0 ₫" HorizontalAlignment="Right"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" Margin="0,5">
                        <TextBlock Text="Khuyến mại:" FontWeight="SemiBold" Width="180"/>
                        <TextBlock x:Name="txtDiscount" Text="0 ₫" HorizontalAlignment="Right"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" Margin="0,15,0,15">
                        <TextBlock Text="Tổng thanh toán:" FontWeight="Bold" FontSize="16" Width="180"/>
                        <TextBlock x:Name="txtTotal" FontWeight="Bold" FontSize="16" HorizontalAlignment="Right"/>
                    </StackPanel>

                    <Button x:Name="btnConfirmOrder" Content="XÁC NHẬN ĐẶT HÀNG"
                            Background="#FF2563EB" Foreground="White" Height="50" FontSize="16"
                            Click="btnConfirmOrder_Click" />
                </StackPanel>
            </Border>

        </StackPanel>
    
</Page>
