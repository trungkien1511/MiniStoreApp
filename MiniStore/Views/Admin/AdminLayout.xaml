<Window x:Class="MiniStore.Views.Admin.AdminLayout"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MiniStore.Views.Admin"
        mc:Ignorable="d"
        Title="Win Mart - Admin Dashboard" Height="720" Width="1280"
        WindowStartupLocation="CenterScreen"
        Background="{DynamicResource ContentBackgroundBrush}">

    <Window.Resources>
        <!-- ================= BẢNG MÀU ================= -->
        <!-- Màu chủ đạo -->
        <SolidColorBrush x:Key="PrimaryRedBrush" Color="#D32F2F"/>
        <!-- Đỏ chính -->
        <SolidColorBrush x:Key="PrimaryRedAccentBrush" Color="#FFEBEE"/>
        <!-- Đỏ nhạt/pastel -->

        <!-- Sidebar -->
        <SolidColorBrush x:Key="SidebarBackgroundBrush" Color="#F5F5F5"/>
        <!-- Xám nhạt tinh tế -->

        <!-- Content -->
        <SolidColorBrush x:Key="ContentBackgroundBrush" Color="#FFFFFF"/>
        <!-- Trắng tinh khiết -->

        <!-- Header -->
        <SolidColorBrush x:Key="HeaderBackgroundBrush" Color="#FFFFFF"/>
        <!-- Header trắng -->

        <!-- Text -->
        <SolidColorBrush x:Key="PrimaryTextBrush" Color="#212121"/>
        <!-- Chữ chính -->
        <SolidColorBrush x:Key="SecondaryTextBrush" Color="#616161"/>
        <!-- Chữ phụ -->

        <!-- Border -->
        <SolidColorBrush x:Key="BorderBrush" Color="#E0E0E0"/>
        <!-- Viền nhạt hiện đại -->

        <!-- Màu nhấn phụ (hover, chọn) -->
        <SolidColorBrush x:Key="AccentBrush" Color="#E53935"/>
        <!-- Đỏ tươi hover/active -->
        <SolidColorBrush x:Key="AccentLightBrush" Color="#FFCDD2"/>
        <!-- Đỏ nhạt nền hover -->

        <!-- Text cho nút -->
        <SolidColorBrush x:Key="ButtonPrimaryTextBrush" Color="#FFFFFF"/>
        <!-- Chữ trắng trên nền đỏ -->
        <SolidColorBrush x:Key="ButtonSecondaryTextBrush" Color="#D32F2F"/>
        <!-- Chữ đỏ trên nền trắng -->
        <SolidColorBrush x:Key="ButtonSidebarTextBrush" Color="#333333"/>
        <!-- Chữ sidebar mặc định -->

        <!-- ================= STYLE ICON ================= -->
        <Style x:Key="IconTextStyle" TargetType="TextBlock">
            <Setter Property="FontFamily" Value="Segoe MDL2 Assets"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Margin" Value="0,0,18,0"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>

        <!-- ================= STYLE NÚT SIDEBAR ================= -->
        <Style TargetType="Button" x:Key="SidebarButtonStyle">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="{StaticResource ButtonSidebarTextBrush}"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="Padding" Value="18,10"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Margin" Value="8,4"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Grid>
                            <!-- Indicator -->
                            <Border x:Name="indicator" HorizontalAlignment="Left" Width="4"
                                    Background="{StaticResource AccentBrush}" CornerRadius="2"
                                    Visibility="Collapsed"/>
                            <Border x:Name="buttonBorder" Background="{TemplateBinding Background}" CornerRadius="6">
                                <ContentPresenter HorizontalAlignment="Left" VerticalAlignment="Center" Margin="{TemplateBinding Padding}"/>
                            </Border>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <!-- Hover -->
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="buttonBorder" Property="Background" Value="{StaticResource AccentLightBrush}"/>
                                <Setter Property="Foreground" Value="{StaticResource AccentBrush}"/>
                                <Setter Property="FontWeight" Value="Bold"/>
                            </Trigger>
                            <!-- Active -->
                            <DataTrigger Binding="{Binding IsEnabled, RelativeSource={RelativeSource Self}}" Value="False">
                                <Setter TargetName="buttonBorder" Property="Background" Value="{StaticResource AccentLightBrush}"/>
                                <Setter TargetName="indicator" Property="Visibility" Value="Visible"/>
                                <Setter Property="Foreground" Value="{StaticResource AccentBrush}"/>
                                <Setter Property="FontWeight" Value="Bold"/>
                            </DataTrigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- ================= STYLE HEADER ICON ================= -->
        <Style TargetType="Button" x:Key="HeaderButtonStyle">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="{StaticResource SecondaryTextBrush}"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Width" Value="40"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="Margin" Value="2,0"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="Transparent" CornerRadius="20">
                            <TextBlock Text="{TemplateBinding Content}" VerticalAlignment="Center" HorizontalAlignment="Center"
                                       FontFamily="Segoe MDL2 Assets" Foreground="{TemplateBinding Foreground}"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Foreground" Value="{StaticResource AccentBrush}"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250"/>
            <!-- Sidebar -->
            <ColumnDefinition Width="*"/>
            <!-- Content -->
        </Grid.ColumnDefinitions>

        <!-- ================= SIDEBAR ================= -->
        <Border Grid.Column="0" Background="{StaticResource SidebarBackgroundBrush}"
                BorderThickness="0,0,1,0" BorderBrush="{StaticResource BorderBrush}">
            <StackPanel>
                <!-- Logo -->
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="25,20,0,35">
                    <Path Data="M 2,3 L 5.5,3 L 8,14 L 17,14 L 19,7 L 7,7 M 8,14 L 8.5,15.5 M 17,14 L 16.5,15.5 M 9,18 A 2,2 0 1 1 7,18 A 2,2 0 0 1 9,18 Z M 16,18 A 2,2 0 1 1 14,18 A 2,2 0 0 1 16,18 Z" 
                          Stroke="{StaticResource PrimaryRedBrush}" StrokeThickness="2" Width="28" Height="28" Stretch="Uniform" VerticalAlignment="Center"/>
                    <TextBlock Text="Win Mart" Foreground="{StaticResource PrimaryTextBrush}" FontSize="22" FontWeight="Bold" Margin="12,0,0,0" VerticalAlignment="Center"/>
                </StackPanel>

                <!-- Menu Items -->
                <TextBlock Text="Home" Foreground="{StaticResource SecondaryTextBrush}" Margin="25,0,0,5" FontSize="12" FontWeight="Bold" Opacity="0.7"/>
                <Button x:Name="DashboardButton" Style="{StaticResource SidebarButtonStyle}" Click="NavigateToDashboard_Click">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="&#xE80F;" Style="{StaticResource IconTextStyle}"/>
                        <TextBlock Text="Dashboard"/>
                    </StackPanel>
                </Button>

                <TextBlock Text="Pages" Foreground="{StaticResource SecondaryTextBrush}" Margin="25,25,0,5" FontSize="12" FontWeight="Bold" Opacity="0.7"/>
                <Button x:Name="ProductButton" Style="{StaticResource SidebarButtonStyle}" Click="NavigateToProducts_Click">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="&#xE785;" Style="{StaticResource IconTextStyle}"/>
                        <TextBlock Text="Quản lý Sản phẩm"/>
                    </StackPanel>
                </Button>
                <Button x:Name="UserButton" Style="{StaticResource SidebarButtonStyle}" Click="NavigateToUsers_Click">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="&#xE716;" Style="{StaticResource IconTextStyle}"/>
                        <TextBlock Text="Quản lý Người dùng"/>
                    </StackPanel>
                </Button>
                <Button x:Name="OrderButton" Style="{StaticResource SidebarButtonStyle}" Click="NavigateToOrders_Click">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="&#xE8C8;" Style="{StaticResource IconTextStyle}"/>
                        <TextBlock Text="Quản lý Đơn hàng"/>
                    </StackPanel>
                </Button>
            </StackPanel>
        </Border>

        <!-- ================= MAIN ================= -->
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="60"/>
                <!-- Header -->
                <RowDefinition Height="*"/>
                <!-- Main -->
            </Grid.RowDefinitions>

            <!-- HEADER -->
            <Border Grid.Row="0" Background="{StaticResource HeaderBackgroundBrush}" Padding="20,0" BorderBrush="{StaticResource BorderBrush}" BorderThickness="0,0,0,1">
                <Grid>
                    <!-- Search Box -->
                    <Border Background="{StaticResource ContentBackgroundBrush}" CornerRadius="8"
                            BorderBrush="{StaticResource BorderBrush}" BorderThickness="1"
                            HorizontalAlignment="Left" VerticalAlignment="Center" Padding="5,0">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="&#xE721;" FontFamily="Segoe MDL2 Assets" Foreground="{StaticResource SecondaryTextBrush}" VerticalAlignment="Center" FontSize="16" Margin="8,0"/>
                            <TextBox Text="Search..." BorderThickness="0" Background="Transparent" VerticalAlignment="Center"
                                     Foreground="{StaticResource SecondaryTextBrush}" Width="300" Padding="5,8"/>
                        </StackPanel>
                    </Border>

                    <!-- User Profile -->
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Right">
                        <Button Style="{StaticResource HeaderButtonStyle}" Content="&#xE714;"/>
                        <!-- Notifications -->
                        <Button Style="{StaticResource HeaderButtonStyle}" Content="&#xE715;"/>
                        <!-- Mail -->
                        <Border Width="1" Height="25" Background="{StaticResource BorderBrush}" Margin="10,0"/>

                        <Ellipse Width="36" Height="36" Margin="5,0,10,0">
                            <Ellipse.Fill>
                                <ImageBrush ImageSource="/Image/coca.jpg"/>
                            </Ellipse.Fill>
                        </Ellipse>
                        <StackPanel VerticalAlignment="Center">
                            <TextBlock Text="Key" FontWeight="SemiBold" FontSize="14" Foreground="{StaticResource PrimaryTextBrush}"/>
                            <TextBlock Text="Administrator" Foreground="{StaticResource SecondaryTextBrush}" FontSize="12"/>
                        </StackPanel>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- CONTENT -->
            <ContentControl Grid.Row="1" x:Name="MainContent" Margin="20" Background="{StaticResource ContentBackgroundBrush}"/>
        </Grid>
    </Grid>
</Window>
