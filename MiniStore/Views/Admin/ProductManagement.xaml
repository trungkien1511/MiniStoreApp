<UserControl x:Class="MiniStore.Views.Admin.ProductManagement"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:MiniStore.Views.Admin"
             mc:Ignorable="d"
             d:DesignHeight="700" d:DesignWidth="1010"
             Background="#F5F7FA">

    <UserControl.Resources>
        <!-- Converter -->
        <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter"/>

        <!-- Colors -->
        <SolidColorBrush x:Key="PrimaryBlueBrush" Color="#3C82F6"/>
        <SolidColorBrush x:Key="PrimaryTextBrush" Color="#1E293B"/>
        <SolidColorBrush x:Key="SecondaryTextBrush" Color="#64748B"/>
        <SolidColorBrush x:Key="BorderBrush" Color="#E2E8F0"/>
        <SolidColorBrush x:Key="RedIndicatorBrush" Color="#EF4444"/>
        <SolidColorBrush x:Key="GreenIndicatorBrush" Color="#22C55E"/>
        <SolidColorBrush x:Key="OrangeIndicatorBrush" Color="#F97316"/>
        <SolidColorBrush x:Key="StatusInStockBrush" Color="#10B981"/>
        <SolidColorBrush x:Key="StatusLowStockBrush" Color="#F59E0B"/>
        <SolidColorBrush x:Key="StatusOutOfStockBrush" Color="#EF4444"/>

        <!-- ================= STYLES ================= -->

        <!-- Add Product Button Style -->
        <Style TargetType="Button" x:Key="PrimaryActionButtonStyle">
            <Setter Property="Background" Value="{StaticResource PrimaryBlueBrush}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="6">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#2563EB"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Toolbar Buttons (Export, Filter) -->
        <Style TargetType="Button" x:Key="ToolbarButtonStyle">
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="{StaticResource SecondaryTextBrush}"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="12,6"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" CornerRadius="6">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="BorderBrush" Value="#CBD5E1"/>
                    <Setter Property="Background" Value="#F8FAFC"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- DataGrid Action Button Style (Edit, Delete) -->
        <Style TargetType="Button" x:Key="DataGridActionButtonStyle">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="{StaticResource SecondaryTextBrush}"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Margin" Value="4,0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="Transparent" Padding="5">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="{Binding Path=Tag, RelativeSource={RelativeSource TemplatedParent}}" FontFamily="Segoe MDL2 Assets" VerticalAlignment="Center" Margin="0,0,5,0"/>
                                <ContentPresenter/>
                            </StackPanel>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Foreground" Value="{StaticResource PrimaryBlueBrush}"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style TargetType="Button" x:Key="DataGridDeleteButtonStyle" BasedOn="{StaticResource DataGridActionButtonStyle}">
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Foreground" Value="{StaticResource RedIndicatorBrush}"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>

    <Grid>
        <!-- Main Content -->
        <Grid Margin="24">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <!-- Breadcrumbs -->
                <RowDefinition Height="Auto"/>
                <!-- Header -->
                <RowDefinition Height="Auto"/>
                <!-- Stats Cards -->
                <RowDefinition Height="Auto"/>
                <!-- Toolbar -->
                <RowDefinition Height="*"/>
                <!-- DataGrid -->
                <RowDefinition Height="Auto"/>
                <!-- Pagination -->
            </Grid.RowDefinitions>

            <!-- 1. BREADCRUMBS and ADD BUTTON -->
            <Grid Grid.Row="0" Margin="0,0,0,16">
                
                <Button Style="{StaticResource PrimaryActionButtonStyle}" HorizontalAlignment="Right"
                        Command="{Binding AddProductCommand}">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="&#xE710;" FontFamily="Segoe MDL2 Assets" FontSize="14" Margin="0,0,8,0" VerticalAlignment="Center"/>
                        <TextBlock Text="Add Product" VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>
            </Grid>

            <!-- 2. HEADER TITLE -->
            <TextBlock Grid.Row="1" Text="Products" FontSize="28" FontWeight="Bold"
                       Foreground="{StaticResource PrimaryTextBrush}" Margin="0,0,0,24"/>

            <!-- 3. STATS CARDS -->
            <UniformGrid Grid.Row="2" Columns="4" Margin="0,0,0,20">
                <Border Background="White" BorderBrush="{StaticResource BorderBrush}" BorderThickness="1" CornerRadius="8" Padding="16" Margin="0,0,10,0">
                    <StackPanel>
                        <TextBlock Text="TOTAL PRODUCTS" Foreground="{StaticResource SecondaryTextBrush}" FontSize="12" FontWeight="SemiBold"/>
                        <!-- SỬA LỖI Ở ĐÂY: Thêm dấu nháy đơn cho FallbackValue -->
                        <TextBlock Text="{Binding TotalProducts, FallbackValue='1,234'}" FontSize="24" FontWeight="Bold" Foreground="{StaticResource PrimaryTextBrush}" Margin="0,8,0,0"/>
                    </StackPanel>
                </Border>
                <Border Background="White" BorderBrush="{StaticResource BorderBrush}" BorderThickness="1" CornerRadius="8" Padding="16" Margin="5,0">
                    <StackPanel>
                        <TextBlock Text="IN STOCK" Foreground="{StaticResource SecondaryTextBrush}" FontSize="12" FontWeight="SemiBold"/>
                        <TextBlock Text="{Binding InStockCount, FallbackValue=987}" FontSize="24" FontWeight="Bold" Foreground="{StaticResource GreenIndicatorBrush}" Margin="0,8,0,0"/>
                    </StackPanel>
                </Border>
                <Border Background="White" BorderBrush="{StaticResource BorderBrush}" BorderThickness="1" CornerRadius="8" Padding="16" Margin="5,0">
                    <StackPanel>
                        <TextBlock Text="LOW STOCK" Foreground="{StaticResource SecondaryTextBrush}" FontSize="12" FontWeight="SemiBold"/>
                        <TextBlock Text="{Binding LowStockCount, FallbackValue=52}" FontSize="24" FontWeight="Bold" Foreground="{StaticResource OrangeIndicatorBrush}" Margin="0,8,0,0"/>
                    </StackPanel>
                </Border>
                <Border Background="White" BorderBrush="{StaticResource BorderBrush}" BorderThickness="1" CornerRadius="8" Padding="16" Margin="10,0,0,0">
                    <StackPanel>
                        <TextBlock Text="OUT OF STOCK" Foreground="{StaticResource SecondaryTextBrush}" FontSize="12" FontWeight="SemiBold"/>
                        <TextBlock Text="{Binding OutOfStockCount, FallbackValue=195}" FontSize="24" FontWeight="Bold" Foreground="{StaticResource RedIndicatorBrush}" Margin="0,8,0,0"/>
                    </StackPanel>
                </Border>
            </UniformGrid>

            <!-- 4. TOOLBAR -->
            <Border Grid.Row="3" Background="White" BorderBrush="{StaticResource BorderBrush}" BorderThickness="1" CornerRadius="8" Padding="8" Margin="0,0,0,10">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <DockPanel Grid.Column="0">
                        <TextBlock Text="&#xE721;" FontFamily="Segoe MDL2 Assets" Foreground="{StaticResource SecondaryTextBrush}" FontSize="16" VerticalAlignment="Center" Margin="8,0,12,0"/>
                        <TextBox Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}" BorderThickness="0" Background="Transparent"
                                 Foreground="{StaticResource PrimaryTextBrush}" Width="300" VerticalContentAlignment="Center" FontSize="13" ToolTip="Search products by name or SKU"/>
                    </DockPanel>

                    <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right">
                        <Button Style="{StaticResource ToolbarButtonStyle}" Margin="8,0" Command="{Binding ExportCommand}">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="&#xE896;" FontFamily="Segoe MDL2 Assets" FontSize="14" Margin="0,0,8,0"/>
                                <TextBlock Text="Export" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>
                        <Button Style="{StaticResource ToolbarButtonStyle}" Command="{Binding FilterCommand}">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="&#xE71C;" FontFamily="Segoe MDL2 Assets" FontSize="14" Margin="0,0,8,0"/>
                                <TextBlock Text="Filter by Category" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- 5. DATA GRID -->
            <Border Grid.Row="4" Background="White" CornerRadius="8" BorderBrush="{StaticResource BorderBrush}" BorderThickness="1">
                <DataGrid ItemsSource="{Binding Products}" CanUserAddRows="False" AutoGenerateColumns="False" IsReadOnly="True"
                          HeadersVisibility="Column" GridLinesVisibility="None" RowHeight="60"
                          VerticalContentAlignment="Center" Foreground="{StaticResource PrimaryTextBrush}">

                    <DataGrid.Resources>
                        <Style TargetType="DataGridColumnHeader">
                            <Setter Property="Background" Value="Transparent"/>
                            <Setter Property="BorderThickness" Value="0,0,0,1"/>
                            <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}"/>
                            <Setter Property="Padding" Value="10,12"/>
                            <Setter Property="FontWeight" Value="SemiBold"/>
                            <Setter Property="Foreground" Value="{StaticResource SecondaryTextBrush}"/>
                            <Setter Property="HorizontalContentAlignment" Value="Left"/>
                        </Style>
                        <Style TargetType="DataGridCell">
                            <Setter Property="BorderThickness" Value="0"/>
                            <Setter Property="Padding" Value="10,0"/>
                            <Setter Property="VerticalAlignment" Value="Center"/>
                            <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="DataGridCell">
                                        <Border Padding="{TemplateBinding Padding}" Background="{TemplateBinding Background}">
                                            <ContentPresenter VerticalAlignment="Center" />
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </DataGrid.Resources>

                    <DataGrid.Columns>
                        <DataGridTemplateColumn Header="PRODUCT" Width="2.5*">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal">
                                        <Ellipse Width="40" Height="40">
                                            <Ellipse.Fill>
                                                <ImageBrush ImageSource="{Binding ImageUrl}" Stretch="UniformToFill"/>
                                            </Ellipse.Fill>
                                        </Ellipse>
                                        <StackPanel VerticalAlignment="Center" Margin="12,0,0,0">
                                            <TextBlock Text="{Binding Name}" FontWeight="SemiBold" Foreground="{StaticResource PrimaryTextBrush}"/>
                                            <TextBlock Text="{Binding Category}" Foreground="{StaticResource SecondaryTextBrush}" FontSize="12"/>
                                        </StackPanel>
                                    </StackPanel>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>

                        <DataGridTextColumn Header="SKU" Binding="{Binding Sku}" Width="1*"/>

                        <DataGridTextColumn Header="STOCK" Binding="{Binding Stock}" Width="0.8*"/>

                        <DataGridTextColumn Header="PRICE" Binding="{Binding Price, StringFormat='{}{0:N0} đ'}" Width="1*"/>

                        <DataGridTemplateColumn Header="STATUS" Width="1*">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal">
                                        <Ellipse x:Name="StatusDot" Width="8" Height="8" Margin="0,0,8,0" VerticalAlignment="Center"/>
                                        <TextBlock Text="{Binding Status}" VerticalAlignment="Center"/>
                                    </StackPanel>
                                    <DataTemplate.Triggers>
                                        <DataTrigger Binding="{Binding Status}" Value="In Stock">
                                            <Setter TargetName="StatusDot" Property="Fill" Value="{StaticResource StatusInStockBrush}"/>
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding Status}" Value="Low Stock">
                                            <Setter TargetName="StatusDot" Property="Fill" Value="{StaticResource StatusLowStockBrush}"/>
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding Status}" Value="Out of Stock">
                                            <Setter TargetName="StatusDot" Property="Fill" Value="{StaticResource StatusOutOfStockBrush}"/>
                                        </DataTrigger>
                                    </DataTemplate.Triggers>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>

                        <DataGridTemplateColumn Header="ACTIONS" Width="1.2*">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                                        <Button Content="Edit" Tag="&#xE70F;" Style="{StaticResource DataGridActionButtonStyle}"
                                                Command="{Binding DataContext.EditProductCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                                CommandParameter="{Binding}"/>
                                        <Button Content="Delete" Tag="&#xE74D;" Style="{StaticResource DataGridDeleteButtonStyle}"
                                                Command="{Binding DataContext.DeleteProductCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                                CommandParameter="{Binding}"/>
                                    </StackPanel>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>
            </Border>

            <!-- 6. PAGINATION -->
            <StackPanel Grid.Row="5" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
                <TextBlock Text="{Binding PageInfo, FallbackValue='Page 1 of 10'}" VerticalAlignment="Center" Margin="0,0,16,0" Foreground="{StaticResource SecondaryTextBrush}"/>
                <Button Content="&#xE76B;" FontFamily="Segoe MDL2 Assets" Command="{Binding PreviousPageCommand}" Style="{StaticResource ToolbarButtonStyle}" Padding="8,6"/>
                <Button Content="&#xE76C;" FontFamily="Segoe MDL2 Assets" Command="{Binding NextPageCommand}" Style="{StaticResource ToolbarButtonStyle}" Padding="8,6" Margin="8,0,0,0"/>
            </StackPanel>
        </Grid>

        <!-- LOADING OVERLAY -->
        <Border Background="#A0FFFFFF"
                Visibility="{Binding IsLoading, Converter={StaticResource BoolToVisibilityConverter}}">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <TextBlock Text="Loading product list..." Margin="0,15,0,0"
                           FontSize="14" Foreground="{StaticResource PrimaryBlueBrush}"/>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>