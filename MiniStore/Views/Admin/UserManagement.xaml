<UserControl x:Class="MiniStore.Views.Admin.UserManagement"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:MiniStore.Views.Admin"
             mc:Ignorable="d"
             d:DesignHeight="700" d:DesignWidth="1010"
             Background="#F5F7FA">

    <UserControl.Resources>
        <!-- Converter -->
        <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter"/>

        <!-- Colors -->
        <SolidColorBrush x:Key="PrimaryBlueBrush" Color="#3C82F6"/>
        <SolidColorBrush x:Key="PrimaryTextBrush" Color="#1E293B"/>
        <SolidColorBrush x:Key="SecondaryTextBrush" Color="#64748B"/>
        <SolidColorBrush x:Key="BorderBrush" Color="#E2E8F0"/>
        <SolidColorBrush x:Key="GreenIndicatorBrush" Color="#22C55E"/>
        <SolidColorBrush x:Key="RedIndicatorBrush" Color="#EF4444"/>
        <SolidColorBrush x:Key="StatusActiveBrush" Color="#10B981"/>
        <SolidColorBrush x:Key="StatusPendingBrush" Color="#F59E0B"/>
        <SolidColorBrush x:Key="StatusSuspendedBrush" Color="#EF4444"/>

        <!-- ================= STYLES ================= -->

        <!-- Add User Button Style -->
        <Style TargetType="Button" x:Key="AddUserButtonStyle">
            <Setter Property="Background" Value="{StaticResource PrimaryBlueBrush}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="6">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#2563EB"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Toolbar Buttons (Delete, Export, Filter) -->
        <Style TargetType="Button" x:Key="ToolbarButtonStyle">
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="{StaticResource SecondaryTextBrush}"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="12,6"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" CornerRadius="6">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="BorderBrush" Value="#CBD5E1"/>
                    <Setter Property="Background" Value="#F8FAFC"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Special style for Delete button -->
        <Style TargetType="Button" x:Key="DeleteButtonStyle" BasedOn="{StaticResource ToolbarButtonStyle}">
            <Setter Property="Foreground" Value="{StaticResource RedIndicatorBrush}"/>
            <Setter Property="BorderBrush" Value="{StaticResource RedIndicatorBrush}"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#FEF2F2"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- DataGrid Action Button Style (Edit) -->
        <Style TargetType="Button" x:Key="DataGridActionButtonStyle">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="{StaticResource SecondaryTextBrush}"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="Transparent" Padding="5">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="{Binding Path=Tag, RelativeSource={RelativeSource TemplatedParent}}" FontFamily="Segoe MDL2 Assets" VerticalAlignment="Center" Margin="0,0,5,0"/>
                                <ContentPresenter/>
                            </StackPanel>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Foreground" Value="{StaticResource PrimaryBlueBrush}"/>
                </Trigger>
            </Style.Triggers>
        </Style>

    </UserControl.Resources>

    <Grid>
        <!-- Main Content -->
        <Grid Margin="24">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <!-- Breadcrumbs -->
                <RowDefinition Height="Auto"/>
                <!-- Header -->
                <RowDefinition Height="Auto"/>
                <!-- Stats Cards -->
                <RowDefinition Height="Auto"/>
                <!-- Toolbar -->
                <RowDefinition Height="*"/>
                <!-- DataGrid -->
            </Grid.RowDefinitions>

            <!-- 1. BREADCRUMBS and ADD USER BUTTON -->
            <Grid Grid.Row="0" Margin="0,0,0,16">
               
                <Button Style="{StaticResource AddUserButtonStyle}" HorizontalAlignment="Right"
                        Command="{Binding AddUserCommand}">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="&#xE710;" FontFamily="Segoe MDL2 Assets" FontSize="14" Margin="0,0,8,0" VerticalAlignment="Center"/>
                        <TextBlock Text="Add user" VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>
            </Grid>

            <!-- 2. HEADER TITLE -->
            <TextBlock Grid.Row="1" Text="Users" FontSize="28" FontWeight="Bold"
                       Foreground="{StaticResource PrimaryTextBrush}" Margin="0,0,0,24"/>

            <!-- 3. STATS CARDS -->
            <UniformGrid Grid.Row="2" Columns="4" Margin="0,0,0,20">
                <!-- Card 1: Total Users -->
                <Border Background="White" BorderBrush="{StaticResource BorderBrush}" BorderThickness="1" CornerRadius="8" Padding="16" Margin="0,0,10,0">
                    <StackPanel>
                        <TextBlock Text="TOTAL USERS" Foreground="{StaticResource SecondaryTextBrush}" FontSize="12" FontWeight="SemiBold"/>
                        <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                            <TextBlock Text="{Binding TotalUsers, FallbackValue=24}" FontSize="24" FontWeight="Bold" Foreground="{StaticResource PrimaryTextBrush}" VerticalAlignment="Center"/>
                            <TextBlock Text="{Binding TotalUsersPrevious, StringFormat='from {0}', FallbackValue='from 22'}" Foreground="{StaticResource SecondaryTextBrush}" FontSize="12" VerticalAlignment="Bottom" Margin="8,0,0,2"/>
                        </StackPanel>
                        <Border Background="#E0F2FE" CornerRadius="10" Padding="6,2" HorizontalAlignment="Left" Margin="0,8,0,0">
                            <TextBlock Text="{Binding TotalUsersChange, StringFormat={}+{0:F1}%, FallbackValue='+5.9%'}" Foreground="#0284C7" FontSize="11" FontWeight="Medium"/>
                        </Border>
                    </StackPanel>
                </Border>

                <!-- Card 2: Active Members -->
                <Border Background="White" BorderBrush="{StaticResource BorderBrush}" BorderThickness="1" CornerRadius="8" Padding="16" Margin="5,0">
                    <StackPanel>
                        <TextBlock Text="ACTIVE MEMBERS" Foreground="{StaticResource SecondaryTextBrush}" FontSize="12" FontWeight="SemiBold"/>
                        <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                            <TextBlock Text="{Binding ActiveMembers, FallbackValue=12}" FontSize="24" FontWeight="Bold" Foreground="{StaticResource PrimaryTextBrush}" VerticalAlignment="Center"/>
                            <TextBlock Text="{Binding ActiveMembersPrevious, StringFormat='from {0}', FallbackValue='from 11'}" Foreground="{StaticResource SecondaryTextBrush}" FontSize="12" VerticalAlignment="Bottom" Margin="8,0,0,2"/>
                        </StackPanel>
                        <Border Background="#DCFCE7" CornerRadius="10" Padding="6,2" HorizontalAlignment="Left" Margin="0,8,0,0">
                            <TextBlock Text="{Binding ActiveMembersChange, StringFormat={}+{0:F1}%, FallbackValue='+1.2%'}" Foreground="{StaticResource GreenIndicatorBrush}" FontSize="11" FontWeight="Medium"/>
                        </Border>
                    </StackPanel>
                </Border>

                <!-- Card 3: New/Returning -->
                <Border Background="White" BorderBrush="{StaticResource BorderBrush}" BorderThickness="1" CornerRadius="8" Padding="16" Margin="5,0">
                    <StackPanel>
                        <TextBlock Text="NEW/RETURNING" Foreground="{StaticResource SecondaryTextBrush}" FontSize="12" FontWeight="SemiBold"/>
                        <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                            <TextBlock Text="{Binding NewReturningPercent, StringFormat={}{0}%, FallbackValue='56%'}" FontSize="24" FontWeight="Bold" Foreground="{StaticResource PrimaryTextBrush}" VerticalAlignment="Center"/>
                            <TextBlock Text="{Binding NewReturningPrevious, StringFormat='from {0:F1}', FallbackValue='from 48.7'}" Foreground="{StaticResource SecondaryTextBrush}" FontSize="12" VerticalAlignment="Bottom" Margin="8,0,0,2"/>
                        </StackPanel>
                        <Border Background="#FEE2E2" CornerRadius="10" Padding="6,2" HorizontalAlignment="Left" Margin="0,8,0,0">
                            <TextBlock Text="{Binding NewReturningChange, StringFormat={}-{0:F1}%, FallbackValue='-2.8%'}" Foreground="{StaticResource RedIndicatorBrush}" FontSize="11" FontWeight="Medium"/>
                        </Border>
                    </StackPanel>
                </Border>

                <!-- Card 4: Active Members % -->
                <Border Background="White" BorderBrush="{StaticResource BorderBrush}" BorderThickness="1" CornerRadius="8" Padding="16" Margin="10,0,0,0">
                    <StackPanel>
                        <TextBlock Text="ACTIVE MEMBERS" Foreground="{StaticResource SecondaryTextBrush}" FontSize="12" FontWeight="SemiBold"/>
                        <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                            <TextBlock Text="{Binding ActiveMembersPercent, StringFormat={}{0}%, FallbackValue='28%'}" FontSize="24" FontWeight="Bold" Foreground="{StaticResource PrimaryTextBrush}" VerticalAlignment="Center"/>
                            <TextBlock Text="{Binding ActiveMembersPercentPrevious, StringFormat={}from {0:F1}%, FallbackValue='from 28.6%'}" Foreground="{StaticResource SecondaryTextBrush}" FontSize="12" VerticalAlignment="Bottom" Margin="8,0,0,2"/>
                        </StackPanel>
                        <Border Background="#F1F5F9" CornerRadius="10" Padding="6,2" HorizontalAlignment="Left" Margin="0,8,0,0">
                            <TextBlock Text="{Binding ActiveMembersPercentChange, StringFormat={}{0:F1}%, FallbackValue='0.0%'}" Foreground="{StaticResource SecondaryTextBrush}" FontSize="11" FontWeight="Medium"/>
                        </Border>
                    </StackPanel>
                </Border>
            </UniformGrid>

            <!-- 4. TOOLBAR -->
            <Border Grid.Row="3" Background="White" BorderBrush="{StaticResource BorderBrush}" BorderThickness="1" CornerRadius="8" Padding="8" Margin="0,0,0,10">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Search Box -->
                    <DockPanel Grid.Column="0">
                        <TextBlock Text="&#xE721;" FontFamily="Segoe MDL2 Assets" Foreground="{StaticResource SecondaryTextBrush}"
                                   FontSize="16" VerticalAlignment="Center" Margin="8,0,12,0"/>
                        <TextBox Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                                 BorderThickness="0" Background="Transparent"
                                 Foreground="{StaticResource PrimaryTextBrush}"
                                 Width="250" VerticalContentAlignment="Center"
                                 FontSize="13" ToolTip="Search users"/>
                    </DockPanel>

                    <!-- Action Buttons -->
                    <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right">
                        <TextBlock Text="{Binding SelectedUsersCount, StringFormat={}{0} Selected, FallbackValue='24 Selected'}"
                                   Foreground="{StaticResource PrimaryTextBrush}" VerticalAlignment="Center" Margin="0,0,16,0" FontSize="13"/>
                        <Button Style="{StaticResource DeleteButtonStyle}" Command="{Binding DeleteSelectedCommand}">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="&#xE74D;" FontFamily="Segoe MDL2 Assets" FontSize="14" Margin="0,0,8,0"/>
                                <TextBlock Text="Delete" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>
                        <Button Style="{StaticResource ToolbarButtonStyle}" Margin="8,0" Command="{Binding ExportCommand}">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="&#xE896;" FontFamily="Segoe MDL2 Assets" FontSize="14" Margin="0,0,8,0"/>
                                <TextBlock Text="Export" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>
                        <Button Style="{StaticResource ToolbarButtonStyle}" Command="{Binding FilterCommand}">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="&#xE71C;" FontFamily="Segoe MDL2 Assets" FontSize="14" Margin="0,0,8,0"/>
                                <TextBlock Text="Filter" VerticalAlignment="Center"/>
                                <TextBlock Text=" 2" Foreground="{StaticResource PrimaryTextBrush}" FontWeight="SemiBold"/>
                            </StackPanel>
                        </Button>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- 5. DATA GRID -->
            <Border Grid.Row="4" Background="White" CornerRadius="8" BorderBrush="{StaticResource BorderBrush}" BorderThickness="1">
                <DataGrid ItemsSource="{Binding Users}" CanUserAddRows="False" AutoGenerateColumns="False" IsReadOnly="True"
                          HeadersVisibility="Column" GridLinesVisibility="None" RowHeight="60"
                          VerticalContentAlignment="Center" Foreground="{StaticResource PrimaryTextBrush}">

                    <DataGrid.Resources>
                        <Style TargetType="DataGridColumnHeader">
                            <Setter Property="Background" Value="Transparent"/>
                            <Setter Property="BorderThickness" Value="0,0,0,1"/>
                            <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}"/>
                            <Setter Property="Padding" Value="10,12"/>
                            <Setter Property="FontWeight" Value="SemiBold"/>
                            <Setter Property="Foreground" Value="{StaticResource SecondaryTextBrush}"/>
                            <Setter Property="HorizontalContentAlignment" Value="Left"/>
                        </Style>
                        <Style TargetType="DataGridCell">
                            <Setter Property="BorderThickness" Value="0"/>
                            <Setter Property="Padding" Value="10,0"/>
                            <Setter Property="VerticalAlignment" Value="Center"/>
                            <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="DataGridCell">
                                        <Border Padding="{TemplateBinding Padding}" Background="{TemplateBinding Background}">
                                            <ContentPresenter VerticalAlignment="Center" />
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </DataGrid.Resources>

                    <DataGrid.Columns>
                        <!-- Checkbox -->
                        <DataGridTemplateColumn>
                            <DataGridTemplateColumn.Header>
                                <CheckBox Margin="6,0,0,0"/>
                            </DataGridTemplateColumn.Header>
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <CheckBox IsChecked="{Binding IsSelected, UpdateSourceTrigger=PropertyChanged}" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>

                        <!-- Name -->
                        <DataGridTemplateColumn Header="NAME" Width="2*">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal">
                                        <Ellipse Width="36" Height="36">
                                            <Ellipse.Fill>
                                                <ImageBrush ImageSource="{Binding AvatarUrl}" Stretch="UniformToFill"/>
                                            </Ellipse.Fill>
                                        </Ellipse>
                                        <StackPanel VerticalAlignment="Center" Margin="12,0,0,0">
                                            <TextBlock Text="{Binding Name}" FontWeight="SemiBold" Foreground="{StaticResource PrimaryTextBrush}"/>
                                            <TextBlock Text="{Binding Email}" Foreground="{StaticResource SecondaryTextBrush}" FontSize="12"/>
                                        </StackPanel>
                                    </StackPanel>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>

                        <!-- Position -->
                        <DataGridTemplateColumn Header="POSITION" Width="1.5*">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <StackPanel>
                                        <TextBlock Text="{Binding PositionTitle}" FontWeight="SemiBold" Foreground="{StaticResource PrimaryTextBrush}"/>
                                        <TextBlock Text="{Binding Department}" Foreground="{StaticResource SecondaryTextBrush}" FontSize="12"/>
                                    </StackPanel>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>

                        <!-- Country -->
                        <DataGridTextColumn Header="COUNTRY" Binding="{Binding Country}" Width="1.2*"/>

                        <!-- Status -->
                        <DataGridTemplateColumn Header="STATUS" Width="1*">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal">
                                        <Ellipse x:Name="StatusDot" Width="8" Height="8" Margin="0,0,8,0" VerticalAlignment="Center"/>
                                        <TextBlock Text="{Binding Status}" VerticalAlignment="Center"/>
                                    </StackPanel>
                                    <DataTemplate.Triggers>
                                        <DataTrigger Binding="{Binding Status}" Value="Active">
                                            <Setter TargetName="StatusDot" Property="Fill" Value="{StaticResource StatusActiveBrush}"/>
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding Status}" Value="Pending">
                                            <Setter TargetName="StatusDot" Property="Fill" Value="{StaticResource StatusPendingBrush}"/>
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding Status}" Value="Suspended">
                                            <Setter TargetName="StatusDot" Property="Fill" Value="{StaticResource StatusSuspendedBrush}"/>
                                        </DataTrigger>
                                    </DataTemplate.Triggers>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>

                        <!-- Portfolio -->
                        <DataGridTemplateColumn Header="PORTFOLIO" Width="1.2*">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <StackPanel VerticalAlignment="Center">
                                        <TextBlock Text="{Binding PortfolioProgress, StringFormat={}{0}%}" HorizontalAlignment="Right" FontSize="12" Foreground="{StaticResource SecondaryTextBrush}"/>
                                        <ProgressBar Value="{Binding PortfolioProgress}" Maximum="100" Height="6" BorderThickness="0">
                                            <ProgressBar.Style>
                                                <Style TargetType="ProgressBar">
                                                    <Setter Property="Foreground" Value="{StaticResource PrimaryBlueBrush}"/>
                                                    <Setter Property="Template">
                                                        <Setter.Value>
                                                            <ControlTemplate TargetType="ProgressBar">
                                                                <Grid>
                                                                    <Border x:Name="PART_Track" CornerRadius="3" Background="{StaticResource BorderBrush}" />
                                                                    <Border x:Name="PART_Indicator" CornerRadius="3" Background="{TemplateBinding Foreground}" HorizontalAlignment="Left" />
                                                                </Grid>
                                                            </ControlTemplate>
                                                        </Setter.Value>
                                                    </Setter>
                                                </Style>
                                            </ProgressBar.Style>
                                        </ProgressBar>
                                    </StackPanel>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>

                        <!-- Role -->
                        <DataGridTextColumn Header="ROLE" Binding="{Binding Role}" Width="1*"/>

                        <!-- Actions -->
                        <DataGridTemplateColumn Width="*">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Button Content="Edit" Tag="&#xE70F;" Style="{StaticResource DataGridActionButtonStyle}"
                                            Command="{Binding DataContext.EditUserCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                            CommandParameter="{Binding}"/>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>
            </Border>
        </Grid>

        <!-- LOADING OVERLAY -->
      <Border Background="#A0FFFFFF"
                Visibility="{Binding IsLoading, Converter={StaticResource BoolToVisibilityConverter}}">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <TextBlock Text="Loading user list..." Margin="0,15,0,0"
                           FontSize="14" Foreground="{StaticResource PrimaryBlueBrush}"/>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>