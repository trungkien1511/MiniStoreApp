<Window x:Class="MiniStore.Views.LoginView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Đăng nhập" Height="450" Width="800"
        WindowStartupLocation="CenterScreen"
        Background="#F5F5F5">

    <Grid>
        <!-- Header -->
        <Border Background="White" Height="60" VerticalAlignment="Top">
            <TextBlock Text="WinMart" FontSize="24" FontWeight="Bold" Foreground="#E53E3E"
                       VerticalAlignment="Center" HorizontalAlignment="Center"/>
        </Border>

        <!-- Login Form -->
        <Border Background="White" CornerRadius="10" Padding="30" Margin="30,80,30,30">
            <StackPanel VerticalAlignment="Top">

                <!-- Title -->
                <TextBlock Text="Đăng nhập" FontSize="22" FontWeight="Bold" Foreground="#333333"
                           HorizontalAlignment="Center" Margin="0,0,0,20"/>

                <!-- Phone/Username -->
                <StackPanel Margin="0,0,0,15">
                    <TextBlock Text="Số điện thoại" FontSize="14" Foreground="#666666"/>
                    <TextBox Height="30"
                             Text="{Binding Phone, UpdateSourceTrigger=PropertyChanged}"
                             FontSize="16"
                             Background="#FFFFFF"
                             BorderBrush="#E0E0E0"
                             BorderThickness="1"
                             Padding="5"/>
                    <TextBlock Text="{Binding PhoneError}" Foreground="#E53E3E" FontSize="12"/>
                </StackPanel>

                <!-- Password -->
                <StackPanel Margin="0,0,0,15">
                    <TextBlock Text="Mật khẩu" FontSize="14" Foreground="#666666"/>
                    <PasswordBox Height="30"
                                 FontSize="16"
                                 Background="#FFFFFF"
                                 BorderBrush="#E0E0E0"
                                 BorderThickness="1"
                                 Padding="5"
                                 PasswordChanged="PasswordBox_PasswordChanged"/>
                    <TextBlock Text="{Binding PasswordError}" Foreground="#E53E3E" FontSize="12"/>
                </StackPanel>

                <!-- Login Button -->
                <Button Content="Đăng Nhập"
                        Height="40"
                        Width="200"
                        Background="#E53E3E"
                        Foreground="White"
                        FontSize="16"
                        FontWeight="Bold"
                        Command="{Binding LoginCommand}"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
